{
  "name": "node-micro",
  "version": "1.0.0-alpha.0",
  "description": "A modular microservice framework providing CLI, HTTP, and gRPC support for building scalable distributed systems.",
  "directories": {
    "example": "examples"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "audit": "npm audit --audit-level=low --production --json",
    "audit:fix": "npm audit fix --audit-level=low --json",
    "outdated": "npm outdated --json",
    "outdated:fix": "npm update",
    "test": "mocha",
    "test:coverage": "nyc mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nvharish/node-micro.git"
  },
  "author": "N V Harish",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nvharish/node-micro/issues"
  },
  "homepage": "https://github.com/nvharish/node-micro#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "chai": "^6.2.0",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "mocha": "^11.7.4",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0"
  }
}
